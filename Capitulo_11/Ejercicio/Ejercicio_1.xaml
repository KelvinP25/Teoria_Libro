<Window x:Class="Capitulo_11.Ejercicio.Ejercicio_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo_11.Ejercicio"
        mc:Ignorable="d"
        Title="Ejercicio_1" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Numero a buscar el Factorial: "/>
            <TextBox x:Name="NumeroTextBox" Height="20" Width="150" HorizontalAlignment="Left" Margin="5,0"/>
            <Button x:Name="VerificarButton" Content="Verificar" Height="20" Width="60" HorizontalAlignment="Left" Click="VerificarButton_Click"  Margin="10,10"/>
        </StackPanel>
    </Grid>
</Window>
