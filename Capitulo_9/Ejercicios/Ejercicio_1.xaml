<Window x:Class="Capitulo_9.Ejercicios.Ejercicio_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo_9.Ejercicios"
        mc:Ignorable="d"
        Title="Ejercicio 1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Content="Ingrese la cantidad de productos: " Margin="5,10,0,0"/>
                <TextBox x:Name="CantidadTextBox" Width="180" HorizontalAlignment="Left" Margin="10,0"/>
                <Button x:Name="IngresarButton" Content="Ingresar Datos" Width="100" HorizontalAlignment="Left" Margin="10,10" Click="IngresarButton_Click"/>
            </StackPanel>
            <StackPanel>
                <ListBox x:Name="MostrarListBox" Height="280" Margin="10,10,0,0" Width="400" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
